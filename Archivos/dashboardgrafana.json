    {
      "title": "Cantidad de Sensores Activos",
      "type": "gauge",
      "datasource": {
        "type": "prometheus",
        "uid": null
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "mqtt_sensors_active",
          "legendFormat": "Sensores Activos",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 4,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
